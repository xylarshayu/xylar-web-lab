---
import '@styles/global.css';
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/assets/xylar_lab.svg" />
    <script is:inline src="src/scripts/initstate.ts" />
    <script defer src="src/scripts/deferred.ts" />
    <GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Hind:wght@400;500;700&family=Montserrat:wght@400;600;700;800;900&display=swap" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

	</head>
	<body>
		<slot />
    <footer id="main-footer">
      Â© Copyright 2023 Xylar | All Rights Reserved
    </footer>
	</body>
</html>

<style is:global>

  #main-footer {
    font-size: var(--text-xs);
    padding: 0.5rem 13px;
    border-top: solid 1px var(--shade-color);
    display: flex;
    justify-content: center;
    align-items: center;
  }

</style>
