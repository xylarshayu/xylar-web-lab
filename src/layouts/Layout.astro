---
import '@styles/global.css';
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/assets/xylar_lab_light.svg" />
    <script is:inline src="src/scripts/darkmode.ts" />
    <GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Hind:wght@400;500;700&family=Montserrat:wght@400;600;700;800&display=swap" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>

</style>
